{% extends './base.html.twig' %}
{% block body %}
    <body class="app sidebar-mini">
    <!-- Navbar -->
    <header class="app-header"><a class="app-header__logo" href="http://localhost:8000/">Procost</a>
        <a class="app-sidebar__toggle" href="#" data-toggle="sidebar" aria-label="Hide Sidebar"></a>
        <!-- Navbar Right Menu-->
        <ul class="app-nav">
            <li class="app-search">
                <a href="http://localhost:8000/connect/" class="btn btn-info">Se déconnecter</a>
            </li>
        </ul>
    </header>
    <!-- Sidebar menu-->
    <div class="app-sidebar__overlay" data-toggle="sidebar"></div>
    <aside class="app-sidebar">
        <div class="app-sidebar__user">
            <img class="app-sidebar__user-avatar" src="img/user.jpg" alt="User Image">
            <div>
                <p class="app-sidebar__user-name">John Doe</p>
                <p class="app-sidebar__user-designation">Manager</p>
            </div>
        </div>
        <ul class="app-menu">
            <li>
                <a class="app-menu__item active" href="http://localhost:8000/">
                    <i class="app-menu__icon fa fa-dashboard"></i>
                    <span class="app-menu__label">Tableau de bord</span>
                </a>
            </li>
            <li>
                <a class="app-menu__item" href="http://localhost:8000/projet/">
                    <i class="app-menu__icon fa fa-laptop"></i>
                    <span class="app-menu__label">Projets</span>
                </a>
            </li>
            <li>
                <a class="app-menu__item" href="http://localhost:8000/employe/">
                    <i class="app-menu__icon fa fa-users"></i>
                    <span class="app-menu__label">Employés</span>
                </a>
            </li>
            <li>
                <a class="app-menu__item" href="http://localhost:8000/metier/">
                    <i class="app-menu__icon fa fa-book"></i>
                    <span class="app-menu__label">Métiers</span>
                </a>
            </li>
        </ul>
    </aside>
    <main class="app-content">
        <div class="app-title">
            <div>
                <h1><i class="fa fa-users"></i>&nbsp;Projets</h1>
            </div>
            <ul class="app-breadcrumb breadcrumb">
                <li class="breadcrumb-item">
                    <a href="#"><i class="fa fa-home fa-lg"></i></a>
                </li>
                <li class="breadcrumb-item">Projets</li>
            </ul>
        </div>
        <div class="tile pb-5">
            <a href={{ path('projet_ajout')}}  class="btn btn-primary float-right mb-4"><i class="fa fa-plus-circle mr-2"></i>Ajouter un projet</a>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead>
                    <tr>
                        <th>Nom</th>
                        <th>Description</th>
                        <th>Prix de vente</th>
                        <th>Date de création</th>
                        <th>Date de livraison</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for proj in Projet %}
                        <tr>
                            <td>{{ proj.nom }}</td>
                            <td>{{proj.description}}</td>
                            <td>{{proj.prix}}</td>
                            <td>{{proj.datecreation|date('Y-m-d')}}</td>
                            <td>{{proj.datelivraison|date('Y-m-d')}}</td>
                            <td>
                                <a href={{ path('projet_detail', {'id': proj.id, }) }}  class="btn btn-primary btn-sm">
                                <i  class="fa fa-eye mr-0"></i>
                                </a>
                                <a href={{ path('projet_modif', {'id': proj.id, }) }} class="btn btn-info btn-sm">
                                <i class="fa fa-pencil mr-0"></i>
                                </a>
                            </td>
                        </tr>
                    {% endfor %}

                    </tbody>
                </table>
            </div>
            <hr/>
            <nav class="float-right">
                <ul class="pagination">
                    <li class="page-item disabled">
                        <span class="page-link">&laquo;</span>
                    </li>
                    <li class="page-item active" aria-current="page">
                        <span class="page-link">1<span class="sr-only">(current)</span></span>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">2</a></li>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">3</a>
                    </li>
                    <li class="page-item">
                        <a class="page-link" href="#">&raquo;</a>
                    </li>
                </ul>
            </nav>
        </div>
    </main>

    <footer class="main-footer">
        &copy; 2019 - PROCOST
    </footer>

    </body>
{% endblock %}
