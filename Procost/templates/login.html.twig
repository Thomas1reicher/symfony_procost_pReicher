{% extends 'base.html.twig' %}
{% block body %}
    <body>
        <section class="material-half-bg">
            <div class="cover"></div>
        </section>
        <section class="login-content">
            <div class="logo">
              <h1>Procost</h1>
            </div>
            <div class="login-box">
                <div class="login-form" >

                    <h3 class="login-head"><i class="fa fa-lg fa-fw fa-user"></i>Connexion</h3>

                    <div class="form-group">
                        <label class="control-label">Email</label>
                        <input id="username" name="username" type="text" class="form-control" placeholder="Email" required>
                    </div>
                    <div class="form-group">
                        <label class="control-label">Mot de passe</label>
                        <input id="password" name="password" type="password" class="form-control" placeholder="Mot de passe" required>
                    </div>
                    <div class="form-group">
                        <div class="utility">
                            <div class="animated-checkbox">
                                <label>
                                    <input type="checkbox"><span class="label-text">Se souvenir de moi</span>
                                </label>
                            </div>
                        </div>
                    </div>
                    <div class="form-group btn-container">

                        <input type="hidden" name="_csrf_token"
                               value="{{ csrf_token('authenticate') }}"
                        >
                        <button type="submit" class="btn btn-primary btn-block"><i class="fa fa-sign-in fa-lg fa-fw"></i>CONNEXION</button>
                    </div>
                </div>




            </div>
        </section>
    

    </body>
{% endblock %}
